<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<!-- 消费方应用名，用于计算依赖关系 -->
	<dubbo:application name="web"/>

	<!-- 使用zookeeper注册中心暴露发现服务地址 -->
	<dubbo:registry address="zookeeper://127.0.0.1:2181"/>

	<!-- 开启启动时检测，当没有可用服务时，会报异常，程序中断，为false时，程序不中断，但是调用服务时报异常 -->
	<dubbo:consumer check="false" timeout="60000"/>
	<!-- 监控中心配置 -->
    <!-- 生成远程服务代理，可以像使用本地bean一样使用userService -->
    <dubbo:reference id="userService" interface="com.roy.service.UserService" check="true"
					 loadbalance="roundrobin" proxy="jdk"/>
	<dubbo:reference id="lrService" interface="com.roy.service.LRService" check="true"
					 loadbalance="roundrobin" proxy="jdk"/>
	<dubbo:reference id="friendService" interface="com.roy.service.FriendService" check="true"
					 loadbalance="roundrobin" proxy="jdk"/>
	<dubbo:reference id="chatOneToOneService" interface="com.roy.service.ChatOneToOneService" check="true"
					 loadbalance="roundrobin" proxy="jdk"/>
</beans>